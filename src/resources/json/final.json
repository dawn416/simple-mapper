{
	"namespace": "com.demo.simple_mapper.test.Area",
	"mapper": [
		{
			"id": "selectById",
			"type": "select",
			"statement": "select * from area where id = #{id}",
			"resultType": "com.demo.simple_mapper.test.Area"
		},
		{
			"id": "updateById",
			"type": "update",
			"statement": "update area set name=#{name} where id = #{id}",
			"resultType": "int"
		}
	]
}